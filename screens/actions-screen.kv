#:kivy 1.10.0



<ActionBtn>:
    size_hint: None, None
    
    _category: 'default'
    _action: 'default'


<ActionsStack@StackLayout>:
    size_hint_y: None
    height: self.minimum_height


<ActionsSection>:
    spacing: 10
    size_hint_y: None
    height: self.minimum_height

    _tl_text: 'default'
    _tl_font_size: 0
    _actions_stack: actions_stack

    TitleLabel:
        text: root._tl_text
        font_size: root._tl_font_size

    ActionsStack:
        id: actions_stack


<AddNewScreenLayout@BoxLayout>:
    _content: content

    ScrollView:
        size_hint: (None, None)
        size: (root.width, root.height)

        BoxLayout:
            id: content
            spacing: 10
            size_hint_y: None
            height: self.minimum_height

