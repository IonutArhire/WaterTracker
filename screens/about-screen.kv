#:kivy 1.10.0



<AboutScreen@Screen>:

    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'

        BoxLayout:
            size_hint: None, None
            size: self.minimum_size

            Label:
                size_hint: None, None
                width: min(self.texture_size[0], root.width * .5)
                height: self.texture_size[1]
                text: '[b]Author[/b]: Arhire Ionut'
                markup: True

            Label:
                size_hint: None, None
                width: min(self.texture_size[0], root.width * .5)
                height: self.texture_size[1]
                text: '[b]version[/b]: v1.0'
                markup: True