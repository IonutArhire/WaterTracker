#:kivy 1.10.1



<StatsLabel>:
    size_hint_y: None
    text_size: self.width, None
    height: self.texture_size[1]
    halign: 'center'
    valign: 'center'


<StatsTable@GridLayout>:
    cols: 2
    size_hint_y: None
    height: self.minimum_height
    spacing: 10


<StatsSection>:
    size_hint_y: None
    height: self.minimum_height
    spacing: 10

    _tl_text: 'default'
    _tl_font_size: 0
    _stats_table: stats_table

    _action_header: action_header
    _amount_header: amount_header

    TitleLabel:
        text: root._tl_text
        font_size: root._tl_font_size

    GridLayout:
        size_hint_y: None
        height: 25
        cols: 2

        height: self.minimum_height

        StatsLabel:
            id: action_header
            bold: True
            text: "Action"

        StatsLabel:
            id: amount_header
            bold: True
            text: "Amount"

    StatsTable:
        id: stats_table


<StatsScreenLayout@ScrollView>:
    _content: content
    _total_lbl: total_lbl

    BoxLayout:
        id: content
        spacing: 10
        size_hint_y: None
        height: self.minimum_height

        DynamicLabel:
            id: total_lbl

            bold: True
            font_size: min(root.height, root.width) * .05

            text: 'default'
            

        