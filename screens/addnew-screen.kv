#:kivy 1.10.1



<AddNewBtn>:
    size_hint: None, None
    category: 'default'
    action: 'default'


<AddNewBtnStack@StackLayout>:
    size_hint_y: None
    height: self.minimum_height


<AddNewSection>:
    spacing: 10
    size_hint_y: None
    height: self.minimum_height

    _tl_text: 'default'
    _tl_font_size: 0
    _btn_stack: btn_stack

    TitleLabel:
        text: root._tl_text
        font_size: root._tl_font_size

    AddNewBtnStack:
        id: btn_stack


<AddNewScreenLayout@BoxLayout>:
    content: content

    ScrollView:
        size_hint: (None, None)
        size: (root.width, root.height)

        BoxLayout:
            id: content
            spacing: 10
            size_hint_y: None
            height: self.minimum_height

