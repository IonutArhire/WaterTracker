#:kivy 1.10.1



<RecordScreenLayout@BoxLayout>:
    padding: root.width * .15, root.height * .15
    spacing: 10

    _tl_text: 'default'
    _user_input: user_input

    DynamicTitleLabel:
        font_size: min(root.height, root.width) * .13
        text: root._tl_text

    DynamicLabel:
        font_size: min(root.height, root.width) * .05
        text: 'Please input the approximative amount of water used (ml):'

    BoxLayout:
        spacing: self.parent.spacing

        TextInput:
            id: user_input
            multiline: False
            input_type: 'number'
            input_filter: 'int'

            size_hint_y: None
            height: root.height * .06

        Button:
            size_hint_y: None
            height: root.height * .1

            -font_size: min(self.height, self.width) * .4

            text: 'Save'

            on_release: app.root._record_screen.record()

        Widget: