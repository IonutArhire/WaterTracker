#:kivy 1.10.1



<HistoryEntry@GridLayout>:
    cols: 1
    size_hint: 1, None
    height: self.minimum_height

    canvas:
        Color:
            rgba: 0,0,0,.5
        Rectangle:
            pos: self.pos
            size: self.size


<HistoryEntryLabel@Label>:
    text: 'default'
    size_hint: None, None
    halign: 'left'
    size: self.texture_size


<HistoryScreenLayout@BoxLayout>:
    history_list: history_list

    ScrollView:
        size_hint: (None, None)
        size: (root.width, root.height)

        StackLayout:
            id: history_list

            orientation: 'lr-bt'
            size_hint_y: None
            
            spacing: 10

            height: self.minimum_height