#:kivy 1.10.1
#:import kivy kivy

#:include global-styles.kv
#:include screens/start-screen.kv
#:include screens/addnew-screen.kv
#:include screens/stats-screen.kv
#:include screens/history-screen.kv
#:include screens/about-screen.kv
#:include screens/record-screen.kv



<WaterTrackerRoot>:
    screen_manager: screen_manager
    record_screen: record_screen

    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: './images/waterfall.jpg'
    padding: min(root.width, root.height) * .08

    ScreenManager:
        id: screen_manager
        StartScreen:
            name: 'start_screen'

        # Add New Functionality #
        AddNewScreen:
            name: 'addnew_screen'
        RecordScreen:
            id: record_screen
            name: 'record_screen'
        # END #

        StatsScreen:
            name: 'stats_screen'
        HistoryScreen:
            name: 'history_screen'
        AboutScreen:
            name: 'about_screen'

        
        