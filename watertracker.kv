#:kivy 1.10.1
#:import kivy kivy

#:include global-styles.kv
#:include screens/start-screen.kv
#:include screens/stats-screen.kv
#:include screens/about-screen.kv
#:include screens/actions-screen.kv
#:include screens/history-screen.kv
#:include screens/add-qbased-screen.kv
#:include screens/add-tbased-screen.kv
#:include screens/add-instants-screen.kv



<WaterTrackerRoot>:
    _screen_manager: screen_manager

    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: './images/waterfall.jpg'
    padding: min(root.width, root.height) * .08

    ScreenManager:
        id: screen_manager

        _add_instants_screen: add_instants_screen
        _add_qbased_screen: add_qbased_screen
        _add_tbased_screen: add_tbased_screen
        _history_screen: history_screen

        StartScreen:
            name: 'start_screen'

        # BEGIN (ADDNEW functionality) #
        ActionsScreen:
            name: 'actions_screen'
        AddInstantsScreen:
            id: add_instants_screen
            name: 'add_instants_screen'
        AddQBasedScreen: # for quantity-based actions
            id: add_qbased_screen
            name: 'add_qbased_screen'
        AddTBasedScreen: # for time-based actions
            id: add_tbased_screen
            name: 'add_tbased_screen'
        # END #

        StatsScreen:
            name: 'stats_screen'
        HistoryScreen:
            id: history_screen
            name: 'history_screen'
        AboutScreen:
            name: 'about_screen'

        
        