#:kivy 1.10.1
#:import kivy kivy

#:include global-styles.kv
#:include screens/start-screen.kv
#:include screens/addnew-screen.kv
#:include screens/stats-screen.kv
#:include screens/history-screen.kv
#:include screens/about-screen.kv
#:include screens/record-screen.kv



<WaterTrackerRoot>:
    _screen_manager: screen_manager

    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: './images/waterfall.jpg'
    padding: min(root.width, root.height) * .08

    ScreenManager:
        id: screen_manager

        _add_instants_screen: add_instants_screen
        _history_screen: history_screen

        StartScreen:
            name: 'start_screen'

        # BEGIN (ADDNEW functionality) #
        AddNewScreen:
            name: 'addnew_screen'
        AddInstantsScreen:
            id: add_instants_screen
            name: 'add_instants_screen'
        # END #

        StatsScreen:
            name: 'stats_screen'
        HistoryScreen:
            id: history_screen
            name: 'history_screen'
        AboutScreen:
            name: 'about_screen'

        
        